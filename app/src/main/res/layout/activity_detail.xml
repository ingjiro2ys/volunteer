<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/contentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:background="@drawable/loading"
            android:scaleType="centerCrop" />


        <CheckBox
            android:id="@+id/favoriteBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="155dp"
            android:checked="false"
            android:button="@null"
            android:background="@drawable/favoritebtn"
            />

        <Button
            android:id="@+id/commentBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="155dp"
            android:layout_toLeftOf="@id/favoriteBtn"
            android:background="@drawable/commentbtn" />

    </RelativeLayout>

    <!--Content Here-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="ครูอาสาเพื่อฝันเด็ก"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin2"
                    android:layout_weight="1"
                    android:text="วันจัดกิจกรรม :" />

                <TextView
                    android:id="@+id/eventDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin2"
                    android:layout_weight="3"
                    android:text="20 ธันวาคม 2560 ถึง 25 ธันวาคม 2560" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin2"
                    android:layout_weight="1"
                    android:text="วันรับสมัคร:" />

                <TextView
                    android:id="@+id/regisDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin2"
                    android:layout_weight="3"
                    android:text="20 ธันวาคม 2560 ถึง 25 ธันวาคม 2560" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin2"
                    android:layout_weight="1"
                    android:text="เบอร์ติดต่อ :" />

                <TextView
                    android:id="@+id/eventPhone"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin2"
                    android:text="0822222222" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin2"
                    android:layout_weight="1"
                    android:text="จำนวนที่รับ:" />

                <TextView
                    android:id="@+id/eventJoin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin2"
                    android:layout_weight="3"
                    android:text="50 คน" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin2"
                    android:layout_weight="1"
                    android:text="รายละเอียด:" />

                <TextView
                    android:id="@+id/tvDesc"
                    android:linksClickable="true"
                    android:autoLink="web"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_margin="@dimen/text_margin2"
                    android:text="@string/large_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin2"
                    android:layout_weight="1"
                    android:text="สถานที่จัด:" />

                <TextView
                    android:id="@+id/eventLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin2"
                    android:layout_weight="3"
                    android:text="กรุงเทพ" />
            </LinearLayout>


                <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/map_frag"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:layout_width="368dp"
                    android:layout_height="551dp"
                    tools:ignore="MissingPrefix"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/joinEventBth"
                    android:text="@string/join_this_event"
                    android:background="@drawable/selector_btn_default"
                    android:visibility="visible"/>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
